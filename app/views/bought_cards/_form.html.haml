= form_for @bought_card do |f|
  - if @bought_card.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bought_card.errors.count, "error")} prohibited this bought_card from being saved:"
      %ul
        - @bought_card.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :card
    = f.text_field :card
  .field
    = f.label :usd_price
    = f.text_field :usd_price
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :condition
    = f.text_field :condition
  .field
    = f.label :quantity
    = f.number_field :quantity
  .field
    = f.label :bought_list
    = f.text_field :bought_list
  .actions
    = f.submit 'Save'
